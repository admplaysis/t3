@model SGI.Areas.PlugAndPlay.Models.TipoOcorrencia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>TipoOcorrencia</h4>
    <hr />
