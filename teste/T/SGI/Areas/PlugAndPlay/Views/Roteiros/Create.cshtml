@model SGI.Areas.PlugAndPlay.Models.Roteiro

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">@ViewData["Title"]</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <i class="fa fa-tags"></i>Cadastros
                </li>
                <li>
                    <a href="@Url.Action("Index","Roteiros")">Maquinas</a>
                </li>
                <li class="active">
                    <strong>Roteiro</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Roteiro</h2>
            <div class="actions panel_actions pull-right">
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-8 col-sm-9 col-xs-10">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaquinaId, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.DropDownList("MaquinaId", null, "", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaquinaId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ProdutoId, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.DropDownList("ProdutoId", null, "", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProdutoId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SequenciaTransformacao, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.SequenciaTransformacao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SequenciaTransformacao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PecasPorPulso, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.PecasPorPulso, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PecasPorPulso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="controls">
                                <div class="checkbox">
                                    <label>
                                        <input value="1" name="Padrao" type="checkbox"> Padrão
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.Padrao, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls">
                                <div class="checkbox">
                                    <label>
                                        <input value="1" name="ConsideraGrupoMaquina" type="checkbox"> Considerar Grupo de Máquinas
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.ConsideraGrupoMaquina, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            <a href="@ViewBag.url" type="button" class="btn btn-default">Cancelar</a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

