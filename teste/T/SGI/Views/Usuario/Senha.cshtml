@model SGI.Models.T_Usuario
@{
    ViewData["Title"] = "Alterar senha usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class='col-xs-12'>
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">@ViewData["Title"]</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <i class="fa fa-gears"></i>Configurações
                </li>
                <li>
                    <a href="@Url.Action("Index", "Usuario")">Usuários</a>
                </li>
                <li class="active">
                    <strong>Alterar senha usuário</strong>
                </li>
            </ol>
        </div>

    </div>
</div>

<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Alterar senha usuário</h2>
            <div class="actions panel_actions pull-right">
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("Senha", "Usuario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.ID_USUARIO)
                @Html.HiddenFor(x => x.ID_PERFIL)
                @Html.HiddenFor(x => x.CODERP)
                <div class="row">
                    <div class="col-md-8 col-sm-9 col-xs-10">
                        <div class="form-group">
                            <label class="form-label">Nome</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.NOME, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Perfil</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.T_Perfil.PER_NOME, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Usuário</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Senha</label>
                            <div class="controls">
                                @Html.PasswordFor(x => x.SENHA, new { @class = "form-control", @placeholder = "***" })
                                @Html.ValidationMessageFor(x => x.SENHA)
                            </div>
                        </div>

                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a href="@Url.Action("Index")" type="button" class="btn">Cancelar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>


@section Styles {
    <environment names="Development">
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
}




@section Scripts {

    <environment names="Development">
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>

    <script type="text/javascript">
        $("#mconfiguracoes").removeClass("open");
        $("#mconfiguracoes").addClass("open");
    </script>
}
