@model SGI.Models.T_Grupo_Indicador
@{
    ViewBag.Title = "Adicionar grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class='col-xs-12'>
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">@ViewData["Title"]</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <i class="fa fa-tags"></i>Movimentos
                </li>
                <li>
                    <a href="@Url.Action("Index","Indicador")">Indicadores</a>
                </li>
                <li class="active">
                    <strong>Adicionar Grupo</strong>
                </li>
            </ol>
        </div>

    </div>
</div>

<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Adicionar Grupo</h2>
            <div class="actions panel_actions pull-right">
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("AddGrupo", "Indicador", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.IND_ID)
                <div class="row">
                    <div class="col-md-8 col-sm-9 col-xs-10">
                        <div class="form-group">
                            <label class="form-label">Perfil</label>
                            <div class="controls">
                                @Html.DropDownList("GRU_ID", null, "Selecione...", new { @class = "select2" })
                                @Html.ValidationMessageFor(x => x.GRU_ID)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Indicador</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.T_Indicadores.IND_DESCRICAO, new { @class = "form-control", @readonly = true })
                                @Html.ValidationMessageFor(x => x.IND_ID)
                            </div>
                        </div>

                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Confirmar</button>
                            <a href="@Url.Action("ListaGrupos", new { idInd = Model.IND_ID })" type="button" class="btn">Cancelar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>


@section Styles {
    <environment names="Development">
        <link href="~/Content/select2.css" rel="stylesheet" type="text/css" media="screen" />
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
}


@section Scripts {

    <environment names="Development">
        <script src="~/Script/select2.js" type="text/javascript"></script>
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/jquery.inputmask.bundle.min.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>

    <script type="text/javascript">
        if ($.isFunction($.fn.select2)) {
            $('.select2').select2();
        }
        $("#mcadastros").removeClass("open");
        $("#mcadastros").addClass("open");
    </script>
}
