@model SGI.Models.T_Unidade
@{
    ViewData["Title"] = "Cadastrar Unidade de medida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class='col-xs-12'>
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">@ViewData["Title"]</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <i class="fa fa-tags"></i>Cadastros
                </li>
                <li>
                    <a href="@Url.Action("Index","Unidade")">Unidade</a>
                </li>
                <li class="active">
                    <strong>Nova Unidade</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="col-xs-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Cadastrar Unidade</h2>
            <div class="actions panel_actions pull-right">
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("Create", "Unidade", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="col-md-8 col-sm-9 col-xs-10">
                        <div class="form-group">
                            <label class="form-label">Un</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.UN, new { @class = "form-control", @placeholder = "Digite a unidade abreviada" })
                                @Html.ValidationMessageFor(x => x.UN)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Nome</label>
                            <div class="controls">
                                @Html.TextBoxFor(x => x.DESCRICAO, new { @class = "form-control", @placeholder = "Digite o nome da unidade" })
                                @Html.ValidationMessageFor(x => x.DESCRICAO)
                            </div>
                        </div>

                        <div class="pull-right">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a href="@Url.Action("Index")" type="button" class="btn">Cancelar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>


@section Styles {
    <environment names="Development">
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/Content/all.css" rel="stylesheet" type="text/css" media="screen" />
    </environment>
}




@section Scripts {

    <environment names="Development">
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/Script/autosize.js" type="text/javascript"></script>
        <script src="~/Script/icheck.js" type="text/javascript"></script>
    </environment>

    <script type="text/javascript">
        $("#mcadastros").removeClass("open");
        $("#mcadastros").addClass("open");
    </script>
}
