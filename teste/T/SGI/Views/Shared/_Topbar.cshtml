<!-- START TOPBAR -->
@using SGI.Autenticacao
<div class='page-topbar @(ViewData["pagetopbar_class"] == null ? "sidebar_shift" : ViewData["pagetopbar_class"])'>
    <div class='logo-area'>

    </div>
    <div class='quick-area'>
        <div class='pull-left'>
            <ul class="info-menu left-links list-inline list-unstyled">
                <li class="sidebar-toggle-wrap">
                    <a href="#" data-toggle="sidebar" class="sidebar_toggle">
                        <i class="fa fa-bars"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class='pull-right'>
            <ul class="info-menu right-links list-inline list-unstyled">
                <li class="profile">
                    <a href="@Url.Action("Perfil","Acesso", new { area = ""})" data-toggle="dropdown" class="toggle">
                        <img src="~/Imagens/profile.jpg" alt="user-image" class="img-circle img-inline">
                        <span>@((HttpContext.Current.User as CustomPrincipal).Name) <i class="fa fa-angle-down"></i></span>
                    </a>
                    <ul class="dropdown-menu profile animated fadeIn">
                        <li>
                            <a href="@Url.Action("Perfil","Acesso", new { area = ""} )">
                                <i class="fa fa-user"></i>
                                Perfil
                            </a>
                        </li>
                        <li class="last">
                            <a href="@Url.Action("Logoff","Acesso", new { area = ""})">
                                <i class="fa fa-lock"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

</div>
<!-- END TOPBAR -->
